            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Controller.Register"> </activity>
        <activity android:name=".Controller.Admin"> </activity>
        <activity android:name=".Controller.PlayerProfile"> </activity>
        <activity android:name=".Controller.StartGame"> </activity>
